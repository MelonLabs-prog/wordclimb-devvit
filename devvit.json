{
  "$schema": "https://developers.reddit.com/schema/config-file.v1.json",
  "name": "wordclimb",
  "permissions": {
    "http": {
      "enable": true,
      "domains": ["api.dictionaryapi.dev"]
    },
    "redis": true
  },
  "post": {
    "dir": "dist/client",
    "entrypoints": {
      "default": {
        "entry": "index.html",
        "height": "regular"
      }
    }
  },
  "media": {
    "dir": "assets"
  },
  "server": {
    "dir": "dist/server",
    "entry": "index.cjs"
  },
  "menu": {
    "items": [
      {
        "label": "Create a new post",
        "description": "wordclimb",
        "location": "subreddit",
        "forUserType": "moderator",
        "endpoint": "/internal/menu/post-create"
      }
    ]
  },
  "triggers": {
    "onAppInstall": "/internal/on-app-install"
  },
  "scheduler": {
    "tasks": {
      "daily-puzzle": {
        "endpoint": "/internal/cron/daily-puzzle",
        "cron": "0 0 * * *"
      }
    }
  },
  "dev": {
    "subreddit": "wordclimb_dev"
  }
}